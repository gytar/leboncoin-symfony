{% extends 'base.html.twig' %}

{% block title %}Browse | Therightcorner{% endblock %}

{% block body %}

{% include('includes/navbar.html.twig') %}

<div class="h-100 mt-5">

 <div class="row w-75 mx-auto my-auto justify-content-around">

{% for item in products %}
   
    <div class="col-5 bg-light rounded p-3 shadow p-3 mb-5">
        <div class="row">
            <div class="col-6">
                <img src="{{item.imageUrl}}" alt="{{item.label}}" class="w-50 ">
            </div>
            <div class="col-6 d-flex flex-column text-left text-dark">
                <h3>{{item.label}}</h3>
                <p>{{item.description}}</p>
            </div>
        </div>
        
        <h5 class="mt-3 text-dark">{{item.price}} â‚¬</h5>
        <div style="float: right !important">
            <span class="text-secondary text-secondary">{{item.seller.firstName}} {{item.seller.lastName}}</span>
        </div>
    </div>
{% endfor %}

</div>

</div>
{% endblock %}
