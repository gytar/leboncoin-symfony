{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }} {{ user.lastName }} Products | TherightcornerAPI{% endblock %}

{% block body %}

    {% include('includes/navbar.html.twig') %}

    <div class="d-flex justify-content-center">
        <div class="w-50 bg-light shadow rounded">
            <h1 class="text-center">{{ user.FirstName }} {{ user.lastName }}'s Products On Sale</h1>
        </div>
    </div>
    <table class="table table-striped table-hover my-3">
        <thead>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image URL</th>
        </thead>
        
        <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.label }}</td>
                    <td>{{ product.price }} â‚¬</td>
                    <td>{{ product.description }}</td>
                    <td><a href="{{product.imageUrl}}" alt="?">{{product.imageUrl}}</a></td>
                </tr>
            {% endfor %}
        
        </tbody>
    

 </table>

    <div class="d-flex justify-content-center">
        <div class="w-25 bg-light shadow mb-2 p-1 d-flex justify-content-around rounded">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
    
{% endblock %}