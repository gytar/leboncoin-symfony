{% extends "base.html.twig" %}

{% block title %}Therightcorner API{% endblock %}

{% block body %}

{% include "includes/navbar.html.twig" %}

<div class="d-flex justify-content-center my-2 p-3">
    <h1>TherightCorner API</h1>
</div>

<div class="d-flex justify-content-center">
    <div class="d-flex justify-content-center flex-column bg-light w-50 p-2 pb-4 m-3 rounded shadow">
        <h3 class="text-center my-3">See all products on sale</h3>
        <div class="d-flex justify-content-around">
            <a href="{{path('list_products_api')}}" class="btn btn-primary btn-lg">Normal</a>
            <a href="{{path('list_products_api_json')}}" class="btn btn-primary btn-lg">JSON</a>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center m-5">
    <div class="w-75 bg-light rounded shadow">
        <h3 class="text-center my-3">Products on sale by user</h3>
        <table class="table table-hover table-striped">
            <thead class="text-center">
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Actions</th>
            </thead>

            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td class="d-flex justify-content-around">
                        <a href="{{ path('list_products_user_api', {id: user.id}) }}"class="btn btn-primary">Normal</a>
                        <a href="{{ path('list_products_user_api_json', {id: user.id}) }}" class="btn btn-primary">JSON</a>
                    </td>
                </tr>
                {% endfor %}
            
            </tbody>
        </table>
    </div>
</div>




{% endblock %}